  #filters { margin-bottom: 20px; text-align:center; }
  select { padding: 5px; border-radius: 5px; margin: 0 10px; }
  .product { border: 1px solid #333; padding: 10px; margin: 10px; border-radius: 8px; display: inline-block; width: 200px; vertical-align: top; background: #1e1e1e; }
  .product img { width:100%; height:150px; object-fit:cover; border-radius:5px; cursor:pointer; }
  .cart { border: 1px solid #333; padding: 15px; margin-top: 20px; border-radius: 8px; background: #1e1e1e; max-width:400px; }
  button { background: #00ffcc; color: #000; border: none; padding: 8px; border-radius: 5px; cursor: pointer; margin-top: 5px; }
  button:hover { background: #00cc99; }
</style>
