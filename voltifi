<!-- RAZORPAY SCRIPT -->
<script src="https://checkout.razorpay.com/v1/checkout.js"></script>

<script>
  /* ======================
     PRODUCT CATALOG
     ====================== */
  const catalog = Array.from({length: 24}).map((_,i)=>({
    id:i+1,
    name: i % 2 === 0 ? `Gaming Mouse ${i+1}` : `Mechanical Keyboard ${i+1}`,
    price: 799 + (i%5)*300,
    color: i%3===0?'Black':i%3===1?'White':'RGB',
    img:'https://via.placeholder.com/400x300'
  }));

  const productsEl = document.getElementById('products');
  const cart = [];

  function render(list){
    productsEl.innerHTML = list.map(p=>`
      <div class="card">
        <img src="${p.img}" alt="${p.name}" />
        <h4>${p.name}</h4>
        <div class="price">â‚¹${p.price}</div>
        <button class="btn" onclick="addToCart(${p.id})">Add to Cart</button>
      </div>`).join('');
  }
  render(catalog);

  function applyFilters(){
    const max = Number(document.getElementById('maxPrice').value)||Infinity;
    const color = document.getElementById('color').value;
    render(catalog.filter(p=>p.price<=max && (!color || p.color===color)));
  }

  function addToCart(id){
    const p = catalog.find(x=>x.id===id);
    cart.push(p);
    document.getElementById('cartCount').textContent = cart.length;
    renderCart();
  }

  function renderCart(){
    const el = document.getElementById('cartItems');
    const total = cart.reduce((s,p)=>s+p.price,0);
    el.innerHTML = cart.map(p=>`<div class="item"><span>${p.name}</span><span>â‚¹${p.price}</span></div>`).join('');
    document.getElementById('total').textContent = total;
  }

  function toggleCart(){
    document.getElementById('cart').classList.toggle('open');
  }

  /* ======================
     RAZORPAY PAYMENT
     ====================== */
  function payWithRazorpay(amount) {
    if (!amount || amount <= 0) {
      alert("Cart is empty");
      return;
    }

    var options = {
      key: "RAZORPAY_KEY_ID_HERE", // ðŸ”´ ADD REAL KEY LATER
      amount: amount * 100,
      currency: "INR",
      name: "Voltify",
      description: "Electronics Purchase",
      handler: function (response) {
        alert("Payment successful!\nPayment ID: " + response.razorpay_payment_id);
      },
      theme: { color: "#4da3ff" }
    };

    var rzp = new Razorpay(options);
    rzp.open();
  }
</script>

