<div class="drawer" id="cart">
  <h3>Your Cart</h3>
  <div id="cartItems"></div>
  <p><strong>Total: â‚¹<span id="total">0</span></strong></p>
  <button class="btn primary" onclick="payWithRazorpay(document.getElementById('total').innerText)">
    Pay Securely
  </button>
  <p style="font-size:12px;color:#9aa3b2">Payments handled by Razorpay</p>
